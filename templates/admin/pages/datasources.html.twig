{% extends "admin/layout/pagelayout.html.twig" %}

{% block content %}
<h2>{{ 'Data sources management'|trans }}</h2>

<div class="navbar-light navbar-side" role="navigation">
	<div class="sidebar-collapse">
		{% if datasource is not empty and datasource.action != 'create' and datasource.action != 'import' and datasource.type != 'uri' %}
		<div id="data-source" class="nav card bg-primary rounded">
			<div class="card-header rounded-top"><h3>{{ 'Data source'|trans }} : <br /> {{ dbname }}</h3></div>
			<div class="card-body">
				<form id="formAddNewTable" action="{{ path('eureka_g6k_admin_datasource_table', {'dsid': dsid, 'table': 'new'}) }}">
				<button id="btnAddNewTable" class="btn btn-secondary" title="{{ 'Add table'|trans }}"><span class="button-label">{{ 'Add table'|trans }}</span> <span class="fas fa-plus-circle"></span></button>
				</form>
				<h4>{{ 'Tables'|trans }} :</h4>
				<ul class="nav nav-pills flex-column">
					{% for tbl in tables %}
					{% if datasource.type == 'database' %}
					<li class="nav-item"><a class="nav-link" href="{{ path('eureka_g6k_admin_datasources') }}/{{ dsid }}/{{ tbl.tbl_name }}/edit">{{ tbl.label }}</a></li>
					{% else %}
					<li class="nav-item"><a class="nav-link" href="{{ path('eureka_g6k_admin_datasources') }}/{{ dsid }}/{{ tbl.tbl_name }}">{{ tbl.label }}</a></li>
					{% endif %}
					{% endfor %}
				</ul>
			</div>
		</div>
		{% endif %}
		<div id="data-sources" class="nav card bg-primary rounded">
			<div class="card-header rounded-top"><h3>{{ 'Data sources'|trans }}</h3></div>
			<div class="card-body">
				<div>
					<form id="formAddNewDataSource" action="{{ path('eureka_g6k_admin_datasource', {'dsid': 0}) }}">
					<button id="btnAddNewDataSource" class="btn btn-secondary float-right">{{ 'Create Datasource'|trans }} <span class="fas fa-plus-circle"></span></button>
					</form>
				</div>
				<div>
					<form id="formImportDataSource" action="{{ path('eureka_g6k_admin_datasource_crud', {'dsid': 0, 'table': 'dummy', 'crud': 'import-datasource'}) }}">
					<button id="btnImportDataSource" class="btn btn-secondary float-right">{{ 'Import Datasource'|trans }} <span class="fas fa-download"></span></button>
					</form>
				</div>
				<ul class="nav nav-pills flex-column">
					{% for dss in datasources %}
					{% if dss.type == 'uri' %}
					<li class="nav-item"><a class="nav-link" href="{{ path('eureka_g6k_admin_datasources') }}/{{ dss.id }}">{{ dss.name }}</a></li>
					{% else %}
					<li class="nav-item"><a class="nav-link" href="{{ path('eureka_g6k_admin_datasources') }}/{{ dss.id }}">{{ dss.database.label|striptags }}</a></li>
					{% endif %}
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
</div>

<div id="page-wrapper" class="content">
	<div id="page-datasources">
		<div class="row">
			<div class="col-md-12">
				{% if table is not empty %}
				<div id="table" class="card bg-primary">
					<div class="card-header">
					<a class="btn btn-primary float-right help-view-button" href="{{ path('eureka_g6k_admin_documentation', { 'document' : 'datasources-management' }) }}" target="_blank" title=""><span>{{ 'Need help ?'|trans }}</span>&nbsp;&nbsp;<span class="fas fa-book"></span></a> 
					{% if table.action != 'create-table' and table.action != 'import-table' %}
					<a class="btn btn-primary float-right drop-table-button" href="{{ path('eureka_g6k_admin_datasource_crud', {'dsid': dsid, 'table': table.name, 'crud': 'drop'}) }}" title="{{ 'Drop table'|trans }}" data-confirm="{{ 'Are you sure you want to drop the table %table% ?'|trans({ '%table%' : table.label }) }}"><span class="button-label">{{ 'Drop table'|trans }}</span> <span class="fas fa-minus-circle"></span></a>
					{% endif %}
					{% if table.action != 'create-table' and table.action != 'edit-table' and table.action != 'import-table'  %}
					<a class="btn btn-primary float-right edit-table-button" href="{{ path('eureka_g6k_admin_datasource_crud', {'dsid': dsid, 'table': table.name, 'crud': 'edit'}) }}" title="{{ 'Edit table structure'|trans }}" data-confirm="{{ 'Are you sure you want to edit the structure of the table %table% ?'|trans({ '%table%' : table.label }) }}"><span class="button-label">{{ 'Edit table structure'|trans }}</span> <span class="fas fa-pencil-alt"></span></a>
					<a class="btn btn-primary float-right import-table-button" href="{{ path('eureka_g6k_admin_datasource_crud', {'dsid': dsid, 'table': table.name, 'crud': 'import'}) }}" title="{{ 'Import to table from a delimited text file'|trans }}" data-confirm="{{ 'Are you sure you want to import data into the table %table% ?'|trans({ '%table%' : table.label }) }}"><span class="button-label">{{ 'Import data'|trans }}</span> <span class="fas fa-download"></span></a>
					{% endif %}
					<h4 class="card-title">{{ table.label }}</h4>
					</div>
					<div class="card-body">
						<div class="alert alert-danger" role="alert">
							<span class="fas fa-exclamation-circle" aria-hidden="true"></span>
							<span class="sr-only">{{ 'Error'|trans }} :</span>
							<span class="error-message"></span>
							<ul></ul>
						</div>
						{% if table.action == 'create-table' or table.action == 'edit-table' %}
						{% if table.action == 'create-table' %}
						<form id="new-table-form" method="post" action="{{ path('eureka_g6k_admin_datasource_crud', {'dsid': dsid, 'table': 'new', 'crud': 'create'}) }}" enctype="multipart/form-data">
						{% else %}
						<form id="edit-table-form" method="post" action="{{ path('eureka_g6k_admin_datasource_crud', {'dsid': dsid, 'table': table.name, 'crud': 'doedit'}) }}" enctype="multipart/form-data">
						{% endif %}
						<div class="card-body">
							<div class="attributes-container">
								<div>
									<div class="form-group row">
										<label class="col-sm-2 col-form-label" for="table-name">{{ 'Name'|trans }}</label>    
										<div class="col-sm-10">
											<input type="text" value="{{ table.name }}" placeholder="name" class="form-control simple-value" data-attribute="name" id="table-name" name="table-name">    
										</div>
									</div>
									<div class="form-group row">    
										<label class="col-sm-2 col-form-label" for="table-label">{{ 'Label'|trans }}</label>    
										<div class="col-sm-10">        
											<input type="text" value="{{ table.label }}" placeholder="label" class="form-control simple-value" data-attribute="label" id="table-label" name="table-label">    
										</div>
									</div>
								</div>
							</div>
							<div id="table-description-panel" class="card bg-light">
								<div class="card-header">{{ 'Description'|trans }}</div>
								<div class="card-body table-description">
									<textarea rows="1" name="table-description" class="richtext form-control form-control-sm">{{ table.description|nofilter }}</textarea>
								</div>
							</div>
						</div>
						<div class="table-responsive">
							<span class="table-caption">{{ 'Fields'|trans }}</span>
							<button id="btnAddNewColumn" class="btn btn-secondary float-right" title="{{ 'Add field'|trans }}"><span class="button-label">{{ 'Add field'|trans }}</span> <span class="fas fa-plus-circle"></span></button>
							<table id="edition-table" class="table table-sm table-striped table-bordered table-hover">
								<thead>
									<tr>
										<th></th>
										<th data-resizable-column-id="new-field">{{ 'Field'|trans }}</th>
										<th data-resizable-column-id="new-type">{{ 'Type'|trans }}</th>
										<th data-resizable-column-id="new-notnull">{{ 'Not null'|trans }}</th>
										<th data-resizable-column-id="new-label">{{ 'Label'|trans }}</th>
									</tr>
								</thead>
								<tbody>
								</tbody>
							</table>
						</div>
						{% if table.action == 'create-table' %}
						<button id="btnSaveNewTable" type="submit" form="new-table-form" class="btn btn-primary float-right">{{ 'Save'|trans }}</button>
						{% else %}
						<button id="btnSaveEditedTable" type="submit" form="edit-table-form" class="btn btn-primary float-right">{{ 'Save'|trans }}</button>
						{% endif %}
						</form>
						{% elseif table.action == 'import-table' %}
						<form id="import-table-form" method="post" action="{{ path('eureka_g6k_admin_datasource_crud', {'dsid': dsid, 'table': table.name, 'crud': 'doimport'}) }}" enctype="multipart/form-data">
						<div class="card bg-light" id="table-import-panel-holder">
							<div class="card-header">
								{{ 'Import to table from a delimited text file'|trans }}
							</div>
							<div class="card-body table-file">
								<div class="form-group row">
									<label class="col-sm-4 col-form-label" for="table-data-file">{{ 'Text file'|trans }}</label>    
									<div class="col-sm-8">        
										<input type="file" id="table-data-file" name="table-data-file" accept="text/csv, text/plain" class="form-control form-control-sm" />
									</div>
								</div>
								<div class="form-group row">    
									<label class="col-sm-4 col-form-label" for="table-data-separator">{{ 'Separator'|trans }}</label>    
									<div class="col-sm-8">        
										<select type="text" id="table-data-separator" name="table-data-separator" class="form-control form-control-sm" />
										<option value=";">{{ 'Semicolon'|trans }}</option>
										<option value=",">{{ 'Comma'|trans }}</option>
										<option value="t">{{ 'Tabulation'|trans }}</option>
										<option value=" ">{{ 'Space'|trans }}</option>
										</select>
									</div>
								</div>
								<div class="form-group row">    
									<label class="col-sm-4 col-form-label" for="table-data-delimiter">{{ 'Delimiter'|trans }}</label>    
									<div class="col-sm-8">        
										<input type="text" id="table-data-delimiter" name="table-data-delimiter" value='"' class="form-control form-control-sm" />
									</div>
								</div>
								<div class="form-group row">    
									<label class="col-sm-4 col-form-label" for="table-data-has-header">{{ 'Column names in first line ?'|trans }}</label>    
									<div class="col-sm-8">        
										<input type="checkbox" id="table-data-has-header" name="table-data-has-header" value="1" class="form-control form-control-sm" checked="checked" />
									</div>
								</div>
							</div>
						</div>
						<button id="btnImportTable" type="submit" form="import-table-form" class="btn btn-primary float-right">{{ 'Import'|trans }}</button>
						</form>
						{% else %}
						<form id="edit-table-rows-form" method="post" action="{{ path('eureka_g6k_admin_datasource_table', {'dsid': dsid, 'table': table.name}) }}" enctype="multipart/form-data">
						<input type="hidden" name="page" value="{{ pagination.currentPageNumber }}">
						<div class="table-responsive">
							<div>{{ table.description|nofilter }}</div>
							<button id="btnAddNewRow" class="btn btn-secondary" title="{{ 'Add record'|trans }}"><span class="button-label">{{ 'Add record'|trans }}</span> <span class="fas fa-plus-circle"></span></button>
							<div class="pull-left">
								<label class="pull-left col-form-label">{{ 'Lines per page'|trans }}</label>
								<div class="pull-left">
								<select name="itemsPerPage" class="form-control">
								<option value="5"{% if pagination.itemsPerPage == 5 %} selected="selected"{% endif %}>5</option>
								<option value="10"{% if pagination.itemsPerPage == 10 %} selected="selected"{% endif %}>10</option>
								<option value="15"{% if pagination.itemsPerPage == 15 %} selected="selected"{% endif %}>15</option>
								<option value="20"{% if pagination.itemsPerPage == 20 %} selected="selected"{% endif %}>20</option>
								<option value="25"{% if pagination.itemsPerPage == 25 %} selected="selected"{% endif %}>25</option>
								<option value="30"{% if pagination.itemsPerPage == 30 %} selected="selected"{% endif %}>30</option>
								<option value="35"{% if pagination.itemsPerPage == 35 %} selected="selected"{% endif %}>35</option>
								<option value="40"{% if pagination.itemsPerPage == 40 %} selected="selected"{% endif %}>40</option>
								<option value="45"{% if pagination.itemsPerPage == 45 %} selected="selected"{% endif %}>45</option>
								<option value="50"{% if pagination.itemsPerPage == 50 %} selected="selected"{% endif %}>50</option>
								</select>
								</div>
							</div>
							<table id="{{ table.name }}" class="table table-sm table-striped table-bordered table-hover">
								<thead>
									<tr>
										{% for info in tableinfos %}
										<th data-resizable-column-id="{{ table.name }}_{{ info.name }}">{{ info.label }}</th>
										{% endfor %}
									</tr>
									<tr>
										{% for info in tableinfos %}
										<th class="{{ info.g6k_type }}">
											{% if info.g6k_type == 'choice' or info.g6k_type == 'multichoice' %}
											<select name="{{ info.name }}-filter" class="form-control form-control-sm" style="width: 100%; font-weight: normal;">
											<option value=""></option>
											{% for choice, label in info.choices %}
											<option value="{{ choice }}"{% if choice == info.filtertext %} selected="selected"{% endif %}>{{ label }}</option>
											{% endfor %}
											</select>
											{% else %}
											<input type="text" name="{{ info.name }}-filter" class="form-control form-control-sm" style="width: 100%; font-weight: normal;" value="{{ info.filtertext }}">
											{% endif %}
										</th>
										{% endfor %}
									</tr>
								</thead>
								<tbody>
									{% for row in pagination.items %}
									<tr>
										{% for col, cell in row %}
											<td class="{{ tableinfos[loop.index0].g6k_type }}">{% apply spaceless %}
											{% if tableinfos[loop.index0].g6k_type == 'boolean' %}
											{% if cell == '0' %}{{ 'No'|trans }}{% else %}{{ 'Yes'|trans }}{% endif %}
											{% else -%}
											{{ cell }}
											{%- endif %}
											{% endapply %}</td>
										{% endfor %}
									</tr>
									{% endfor %}
								</tbody>
							</table>
							{% if pagination.lastPageNumber > 1 %}
							<nav id="table-nav">
								<ul class="pagination justify-content-end">
									{% if pagination.firstPageNumber and pagination.firstPageNumber != pagination.currentPageNumber %}
									<li class="page-item">
										<a class="page-link" data-page="{{ pagination.firstPageNumber }}" href="#">&laquo;</a>
									</li>
									{% else %}
									<li class="page-item disabled">
										<a class="page-link" data-page="0">&laquo;</a>
									</li>
									{% endif %}
									{% if pagination.previousPageNumber %}
									<li class="page-item">
										<a class="page-link" data-page="{{ pagination.previousPageNumber }}" href="#"><span aria-hidden="true">&lsaquo;</span><span class="sr-only">{{ 'Previous'|trans }}</span></a>
									</li>
									{% else %}
									<li class="page-item disabled">
										<a class="page-link" href="#"><span aria-hidden="true">&lsaquo;</span><span class="sr-only">{{ 'Previous'|trans }}</span></a>
									</li>
									{% endif %}
									{% for page in pagination.pages %}
									{% if page == pagination.currentPageNumber %}
									<li class="page-item active">
										<a class="page-link" data-page="0">{{ page }}</a>
									</li>
									{% else %}
									<li class="page-item">
										<a class="page-link" data-page="{{ page }}" href="#">{{ page }}</a>
									</li>
									{% endif %}
									{% endfor %}
									{% if pagination.nextPageNumber %}
									<li class="page-item">
										<a class="page-link" data-page="{{ pagination.nextPageNumber }}" href="#"><span aria-hidden="true">&rsaquo;</span><span class="sr-only">{{ 'Next'|trans }}</span></a>
									</li>
									{% else %}
									<li class="page-item disabled">
										<a class="page-link" data-page="0" href="#"><span aria-hidden="true">&rsaquo;</span><span class="sr-only">{{ 'Next'|trans }}</span></a>
									</li>
									{% endif %}
									{% if pagination.lastPageNumber and pagination.lastPageNumber != pagination.currentPageNumber %}
									<li class="page-item">
										<a class="page-link" data-page="{{ pagination.lastPageNumber }}" href="#">&raquo;</a>
									</li>
									{% else %}
									<li class="page-item disabled">
										<a class="page-link" data-page="0">&raquo;</a>
									</li>
									{% endif %}
								</ul>
							</nav>
							{% endif %}
						</div>
						</form>
						{% endif %}
					</div>
				</div>
				{% elseif datasource is not empty %}
				<div id="datasource" class="card bg-primary">
					<div class="card-header">
					<a class="btn btn-primary float-right help-view-button" href="{{ path('eureka_g6k_admin_documentation', { 'document' : 'datasources-management' }) }}" target="_blank" title=""><span>{{ 'Need help ?'|trans }}</span>&nbsp;&nbsp;<span class="fas fa-book"></span></a> 
					{% if datasource.action == 'show' %}
					<a class="btn btn-primary float-right drop-datasource-button" href="{{ path('eureka_g6k_admin_datasource_crud', {'dsid': datasource.id, 'table': 'dummy', 'crud': 'drop-datasource'}) }}" title="{{ 'Drop datasource'|trans }}" data-confirm="{{ 'Are you sure you want to drop the datasource %datasource% ?'|trans({ '%datasource%': datasource.name }) }}'"><span class="button-label">{{ 'Drop datasource'|trans }}</span> <span class="fas fa-minus-circle"></span></a>
					<a class="btn btn-primary float-right edit-datasource-button" href="{{ path('eureka_g6k_admin_datasource_crud', {'dsid': datasource.id, 'table': 'dummy', 'crud': 'edit-datasource'}) }}" title="{{ 'Edit datasource'|trans }}" data-confirm="{{ 'Are you sure you want to edit the datasource %datasource% ?'|trans({ '%datasource%': datasource.name }) }}'"><span class="button-label">{{ 'Edit datasource'|trans }}</span> <span class="fas fa-pencil-alt"></span></a>
					{% if datasource.type == 'internal' %}
					<a class="btn btn-primary float-right export-datasource-button" href="{{ path('eureka_g6k_admin_datasource_crud', {'dsid': datasource.id, 'table': 'dummy', 'crud': 'export-datasource'}) }}" title="{{ 'Export datasource'|trans }}"><span class="button-label">{{ 'Export datasource'|trans }}</span> <span class="fas fa-upload"></span></a>
					{% endif %}
					{% endif %}
					<h4 class="card-title">{{ datasource.label|striptags }}</h4>
					</div>
					<div class="card-body">
						<div class="alert alert-danger" role="alert">
							<span class="fas fa-exclamation-circle" aria-hidden="true"></span>
							<span class="sr-only">{{ 'Error'|trans }}:</span>
							<span class="error-message"></span>
							<ul></ul>
						</div>
						{% if datasource.action == 'show' %}
						<div class="card bg-light">
							<div class="card-body">
								<div class="attributes-container">
									<div>
										<div class="form-group row">
											<label class="col-sm-2 col-form-label">{{ 'Name'|trans }}</label>    
											<div class="col-sm-10">
												<p data-attribute="name" data-value="{{ datasource.name }}" class="form-control-plaintext simple-value">{{ datasource.name }}</p>
											</div>
										</div>
										<div class="form-group row">    
											<label class="col-sm-2 col-form-label">{{ 'Type'|trans }}</label>    
											<div class="col-sm-10">
												{% if datasource.type == "internal" %}
													{% set option = 'Internal'|trans  %}
												{% elseif datasource.type == "database" %}
													{% set option = 'External database'|trans %}
												{% else %}
													{% set option = 'External webservice (Rest API)'|trans %}
												{% endif %}
												<p data-attribute="type" data-value="{{ option }}" class="form-control-plaintext simple-value">{{ option }}</p>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="card bg-light" id="datasource-description-panel-holder">
							<div class="card-header">
								{{ 'Description'|trans }}
							</div>
							<div class="card-body datasource-description">
								{{ datasource.description|nofilter }}
							</div>
						</div>
						{% if datasource.type == "internal" or datasource.type == "database" %}
						<div class="card bg-light" id="datasource-database-panel-holder">
							<div class="card-header">
								{{ 'Database'|trans }}
							</div>
							<div class="card-body datasource-database">
								<div class="form-group row">    
									<label class="col-sm-2 col-form-label">{{ 'Type'|trans }}</label>    
									<div class="col-sm-10">
										{% if datasource.database.type == "jsonsql" %}
											{% set option = 'JsonSQL' %}
										{% elseif datasource.database.type == "sqlite" %}
											{% set option = 'SQLite' %}
										{% elseif datasource.database.type == "mysql" or datasource.database.type == "mysqli" %}
											{% set option = 'MySQL' %}
										{% else %}
											{% set option = 'PostgreSQL' %}
										{% endif %}
										<p data-attribute="database.type" data-value="{{ option }}" class="form-control-plaintext simple-value">{{ option }}</p>
									</div>
								</div>
								<div class="form-group row">
									<label class="col-sm-2 col-form-label">{{ 'Database name'|trans }}</label>    
									<div class="col-sm-10">
										<p data-attribute="database.name" data-value="{{ datasource.database.name }}" class="form-control-plaintext simple-value">{{ datasource.database.name }}</p>
									</div>
								</div>
								<div class="form-group row">
									<label class="col-sm-2 col-form-label">{{ 'Database label'|trans }}</label>    
									<div class="col-sm-10">
										<p data-attribute="database.label" data-value="{{ datasource.database.label }}" class="form-control-plaintext simple-value">{{ datasource.database.label }}</p>
									</div>
								</div>
								{% if datasource.database.type == "mysql" or datasource.database.type == "mysqli" or datasource.database.type == "pgsql" %}
								<div class="form-group row">
									<label class="col-sm-2 col-form-label">{{ 'Database host'|trans }}</label>    
									<div class="col-sm-10">        

{% extends "admin/layout/pagelayout.html.twig" %}

{% import _self as page %}

{% block content %}
<h2>{{ 'Simulators definition'|trans }}</h2>
{% if simulator is not empty %}
<button class="btn btn-warning update-button save-simulator">{{ 'Save'|trans }} <span class="far fa-save"></span></button>
{% endif %}
<div class="navbar-light navbar-side" role="navigation">
	<div class="sidebar-collapse">
		<div id="simulators" class="nav card bg-primary">
			<div class="card-header rounded-top"><h3>{{ 'Simulators'|trans }}</h3></div>
			<div class="card-body">
				<div>
					<form action="{{ path('eureka_g6k_admin_simulator_crud', {'simulator': 'new', 'crud': 'create'}) }}">
					<button id="btnAddNewSimulator" class="btn btn-secondary float-right">{{ 'Create simulator'|trans }} <span class="fas fa-plus-circle"></span></button>
					</form>
				</div>
				<div>
					<form action="{{ path('eureka_g6k_admin_simulator_crud', {'simulator': 'new', 'crud': 'import'}) }}">
					<button id="btnImportSimulator" class="btn btn-secondary float-right">{{ 'Import simulator'|trans }} <span class="fas fa-download"></span></button>
					</form>
				</div>
				<ul class="nav nav-pills flex-column">
					{% set category = '' %}
					{% for simu in simulators %}
					{% if simu.category != category %}
						{% if category != '' %} 
							</ul>
						</li>
						{% endif %}
						{% set category = simu.category|trim %}
						<li class="closed">
							<label class="tree-toggler nav-header" aria-expanded="false">{{ category }}</label>
							<ul class="nav nav-list tree">
					{% endif %}
					<li class="nav-item" data-simulator="{{ simu.file }}"><a class="nav-link" href="{{ path('eureka_g6k_admin_simulators') }}/{{ simu.file }}">{{ simu.label }}</a></li>
					{% endfor %}
					{% if category != '' %} 
						</ul>
					</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</div>
	<div id="trigger"></div>
</div>

<div id="page-wrapper" class="content">
	<div id="page-simulators">
		<div class="row">
			<div class="col-md-12">
				{% if simulator is not empty %}
				<div class="panel-group" id="simulator" role="tablist" aria-multiselectable="true">
					<div class="card bg-primary">
						<div id="simulator-options-panel" class="card-header" role="tab">
							<a class="btn btn-primary float-right help-view-button" href="{{ path('eureka_g6k_admin_documentation', { 'document' : 'simulators-management' }) }}" target="_blank" title=""><span>{{ 'Need help ?'|trans }}</span>&nbsp;&nbsp;<span class="fas fa-book"></span></a> 
							{% if hiddens.action != 'create'%}
							<div class="btn-group float-right update-button">
								<button class="btn btn-primary dropdown-toggle" title="{{ 'Delete'|trans }}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<span class="button-label">{{ 'Delete'|trans }}</span> <span class="fas fa-minus-circle"></span>
								</button>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item" href="{{ path('eureka_g6k_admin_simulator_crud', {'simulator': simulator.name, 'crud': 'delete'}) }}" class="delete-simulator" data-parent="#simulator" title="{{ 'all versions of this simulator'|trans }}" data-confirm="{{ 'Are you sure you want to delete all versions of the simulator %simulator%?'|trans({ '%simulator%': simulator.name }) }}">{{ 'all versions of this simulator'|trans }}</a>
									</li>
									<li{% if not hiddens.updated %} class="disabled" aria-hidden="true"{% endif %}>
										<a{% if not hiddens.updated %} class="dropdown-item disabled" aria-hidden="true"{% else %} class="dropdown-item"{% endif %} href="{{ path('eureka_g6k_admin_simulator_crud', {'simulator': simulator.name, 'crud': 'delete-working-version'}) }}" class="delete-working-version" data-parent="#simulator" title="{{ 'working version only'|trans }}" data-confirm="{{ 'Are you sure you want to delete the working version of the simulator %simulator%?'|trans({ '%simulator%': simulator.name }) }}">{{ 'working version only'|trans }}</a>
									</li>
								</ul>
							</div>
							{% endif %}
							{% if hiddens.action != 'create' and valid %}
							<a href="{{ path('eureka_g6k_admin_simulator_calcul', {'simu': simulator.name, 'view': simulator.defaultView }) }}" class="btn btn-primary float-right view-button" title="{{ 'Try it'|trans }}" target="_blank"><span class="button-label">{{ 'Try it'|trans }}</span> <span class="far fa-eye"></span></a>
							{% endif %}
							<button class="btn btn-primary float-right update-button edit-simulator" title="{{ 'Edit'|trans }}"><span class="button-label">{{ 'Edit'|trans }}</span> <span class="fas fa-pencil-alt"></span></button>
							{% if hiddens.action != 'create' %}
							<a class="btn btn-primary float-right link-button export-simulator" href="{{ path('eureka_g6k_admin_simulator_crud', {'simulator': simulator.name, 'crud': 'clone'}) }}" title="{{ 'Clone simulator'|trans }}"><span class="button-label">{{ 'Clone simulator'|trans }}</span> <span class="far fa-copy"></span></a>
							<a class="btn btn-primary float-right link-button export-simulator" href="{{ path('eureka_g6k_admin_simulator_crud', {'simulator': simulator.name, 'crud': 'export'}) }}" title="{{ 'Export simulator'|trans }}"><span class="button-label">{{ 'Export simulator'|trans }}</span> <span class="fas fa-upload"></span></a>
							{% if hiddens.updated %}
							<a class="btn btn-primary float-right link-button publish-simulator" href="{{ path('eureka_g6k_admin_simulator_crud', {'simulator': simulator.name, 'crud': 'publish'}) }}" title="{{ 'Publish simulator'|trans }}"><span class="button-label">{{ 'Publish simulator'|trans }}</span> <span class="far fa-share-square"></span></a>
							{% endif %}
							{% if deployment %}
							<a class="btn btn-primary float-right link-button deploy-simulator" href="{{ path('eureka_g6k_admin_simulator_crud', {'simulator': simulator.name, 'crud': 'deploy'}) }}" title="{{ 'Deploy simulator'|trans }}" data-confirm="{{ 'Are you sure you want to deploy the simulator %simulator% on the front servers?'|trans({ '%simulator%': simulator.name }) }}"><span class="button-label">{{ 'Deploy simulator'|trans }}</span> <span class="far fa-share-square"></span></a>
							{% endif %}
							{% endif %}
							<form id="save-form" action="{{ path('eureka_g6k_admin_simulator_crud', {'simulator': simulator.name, 'crud': 'save'}) }}" method="post">
							<input type="hidden" name="simulator" value="" />
							<input type="hidden" name="sources" value="" />
							<input type="hidden" name="datas" value="" />
							<input type="hidden" name="steps" value="" />
							<input type="hidden" name="rules" value="" />
							<input type="hidden" name="profiles" value="" />
							<input type="hidden" name="update" value="true" />
							{% if hiddens.action == 'create' -%}<input type="hidden" name="create" value="true" />{%- endif %}
							{% if hiddens.action == 'clone' -%}
							<input type="hidden" name="clone" value="true" />
							<input type="hidden" name="cloned" value="{{ hiddens.cloned }}" />
							{%- endif %}
							<h4 class="card-title">{{ simulator.label }}</h4>
							</form>
						</div>
						<div class="card-body">
							<div class="card bg-light" id="simulator-attributes-panel-holder">
								<div class="card-body">
									<div class="attributes-container">
										<div>
										{{ page.showAttribute('simulator', 'text', 'name', 'Name'|trans, simulator.name, simulator.name, true, 'name') }}
										{{ page.showAttribute('simulator', 'text', 'label', 'Label'|trans, simulator.label, simulator.label, true, 'label') }}
										{{ page.showAttribute('simulator', 'text', 'category', 'Category'|trans, simulator.category, simulator.category, true, 'category') }}
										{{ page.showAttribute('simulator', 'text', 'defaultView', 'Default view'|trans, simulator.defaultView, simulator.defaultView, true, 'defaultView') }}
										{{ page.showAttribute('simulator', 'text', 'referer', 'Main referer'|trans, simulator.referer, simulator.referer, true, 'referer') }}
										{{ page.showAttribute('simulator', 'select', 'locale', 'Locale'|trans, simulator.locale, simulator.locale, true, 'Locale'|trans, simulator.controller.languages) }}
										{{ page.showAttribute('simulator', 'select', 'dateFormat', 'Date format'|trans, simulator.dateFormat, simulator.dateFormat|trans, true, 'Select a format'|trans, { 'd/m/Y':'d/m/Y'|trans, 'm/d/Y':'m/d/Y'|trans, 'd-m-Y':'d-m-Y'|trans, 'm-d-Y':'m-d-Y'|trans, 'Y-m-d':'Y-m-d'|trans }) }}
										{{ page.showAttribute('simulator', 'text', 'timezone', 'Time zone'|trans, simulator.timezone, simulator.timezone, true, 'Time zone'|trans) }}
										{{ page.showAttribute('simulator', 'select', 'decimalPoint', 'Decimal point'|trans, simulator.decimalPoint, simulator.decimalPoint, true, 'Decimal point'|trans, { ",": 'Comma'|trans, ".": 'Dot'|trans, "٫": 'Arabic decimal point'|trans }) }}
										{{ page.showAttribute('simulator', 'select', 'groupingSeparator', 'Grouping separator'|trans, simulator.groupingSeparator, simulator.groupingSeparator, true, 'Grouping separator'|trans, { "": 'None'|trans, " ": 'Space'|trans, ",": 'Comma'|trans, "٬": 'Arabic thousands separator'|trans, ".": 'Dot'|trans, "'": 'Apostrophe'|trans, "’": 'Private use 2'|trans }) }}
										{{ page.showAttribute('simulator', 'number', 'groupingSize', 'Grouping size'|trans, simulator.groupingSize, simulator.groupingSize, true, 'Grouping size'|trans) }}
										{{ page.showAttribute('simulator', 'select', 'moneySymbol', 'Currency symbol'|trans, simulator.moneySymbol, simulator.moneySymbol, true, 'Select a symbol'|trans, simulator.controller.currencySymbols) }}
										{{ page.showAttribute('simulator', 'select', 'symbolPosition', 'Symbol position'|trans, simulator.symbolPosition, simulator.symbolPosition, true, 'Select a position'|trans, {'before':'before currency'|trans, 'after':'after currency'|trans}) }}
										{{ page.showAttribute('simulator', 'checkbox', 'dynamic', 'Interactive UI'|trans, simulator.dynamic, simulator.dynamic, true, 'dynamic') }}
										{{ page.showAttribute('simulator', 'checkbox', 'memo', 'Data memo ?'|trans, simulator.memo, simulator.memo, true, 'memo') }}
										</div>
									</div>
								</div>
							</div>
							<div class="card bg-light" id="simulator-description-panel-holder">
								<div class="card-header">
									{{ 'Description'|trans }}
								</div>
								<div class="card-body simulator-description rich-text" data-edition="{{ simulator.description.edition }}">
									{{ page.paragraphs(simulator.replaceBySpecialTags(simulator.description))|nofilter }}
								</div>
							</div>
							<div class="card bg-light" id="simulator-related-informations-panel-holder">
								<div class="card-header">
									{{ 'Related informations'|trans }}
								</div>
								<div class="card-body simulator-related-informations rich-text" data-edition="{{ simulator.relatedInformations.edition }}">
									{{ page.paragraphs(simulator.replaceBySpecialTags(simulator.relatedInformations))|nofilter }}
								</div>
							</div>
							<div class="card bg-light" id="simulator-elements-panel">
							{{ page.showSources ( simulator ) }}
							{{ page.showDatas ( simulator ) }}
							{{ page.showSteps ( simulator, _context ) }}
							{{ page.showBusinessRules ( simulator, _context ) }}
							{{ page.showProfiles ( simulator ) }}
							</div>
						</div>
					</div>
				</div>
				{% elseif hiddens.action == 'import' %}
				<div id="simulator" class="card bg-primary">
					<div class="card-header">
					<a class="btn btn-primary float-right help-view-button" href="{{ path('eureka_g6k_admin_documentation', { 'document' : 'simulators-management' }) }}" target="_blank" title=""><span>{{ 'Need help ?'|trans }}</span>&nbsp;&nbsp;<span class="fas fa-book"></span></a> 
					<h4 class="card-title">{{ 'Simulator : import'|trans }}</h4>
					</div>
					<div class="card-body">
						<div class="alert alert-danger" role="alert">
							<span class="fas fa-exclamation-circle" aria-hidden="true"></span>
							<span class="sr-only">{{ 'Error'|trans }} :</span>
							<span class="error-message"></span>
							<ul></ul>
						</div>
						<form id="simulator-import-form" method="post" action="{{ path('eureka_g6k_admin_simulator_crud', {'simulator': 'new', 'crud': 'doimport'}) }}" enctype="multipart/form-data">
						<div class="card bg-light" id="simulator-import-panel-holder">
							<div class="card-header">
								{{ 'Import simulator'|trans }}
							</div>
							<div class="card-body simulator-file">
								<div class="form-group row">
									<label class="col-sm-2 col-form-label" for="simulator-file">{{ 'Simulator file'|trans }}</label>    
									<div class="col-sm-10">
										<input type="file" id="simulator-file" name="simulator-file" accept=".xml" class="form-control input-sm" />
									</div>
								</div>
								<div class="form-group row">
									<label class="col-sm-2 col-form-label" for="simulator-stylesheet">{{ 'Stylesheet (optional)'|trans }}</label>    
									<div class="col-sm-10">
										<input type="file" id="simulator-stylesheet" name="simulator-stylesheet" accept="text/css" class="form-control input-sm" />
									</div>
								</div>
								<div class="form-group row">
									<label class="col-sm-2 col-form-label" for="simulator-pdfform">{{ 'PDF Form (optional)'|trans }}</label>    
									<div class="col-sm-10">
										<input type="file" id="simulator-pdfform" name="simulator-pdfform" accept="application/pdf" class="form-control input-sm" />
									</div>
								</div>
								<div class="form-group row">
									<label class="col-sm-2 col-form-label" for="simulator-pdfinfo">{{ 'PDF Form infos (optional)'|trans }}</label>    
									<div class="col-sm-10">
										<input type="file" id="simulator-pdfinfo" name="simulator-pdfinfo" accept=".info" class="form-control input-sm" />
									</div>
								</div>
							</div>
						</div>
						<button id="btnDoImportSimulator" class="btn btn-primary float-right">{{ 'Import'|trans }}</button>
						</form>
					</div>
				</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>
{% endblock %}


{% macro paragraphs(text) %}
	{% if text.edition is defined and text.edition != 'manual' %}
		{{ text.content|nofilter }}
	{% else %}
		{% if text.content is defined %}
		{% set text = text.content %}
		{% endif %}
		{% set paragraphs = text|trim|split("\n") %}
		{% if paragraphs is not empty %}
			{% if paragraphs|length == 1 %}
				{{ paragraphs[0]|nofilter }}
			{% else %}
				{%- for paragraph in paragraphs -%}
					{%- if paragraph|trim is empty or paragraph|trim == '&nbsp;' -%}<br>{%- else -%}<p>{{ paragraph|nofilter }}</p>{%- endif -%}
				{% endfor %}
			{% endif %}
		{% endif %}
	{% endif %}
{% endmacro %}



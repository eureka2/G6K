{% extends "admin/layout/pagelayout.html.twig" %}

{% block content %}
<div class="jumbotron">
  <h1>{{ 'Welcome to G6K world!'|trans }}</h1>
  <p class="lead">{{ 'G6K is a calculation simulator engine'|trans }}</p>
  <p><a class="btn btn-primary btn-lg" href="{{ path('eureka_g6k_admin_documentation', {'document': 'learn-more' }) }}" role="button">{{ 'Learn more'|trans }}</a></p>
</div>

<div class="row thumbnails">
	{% if is_granted('ROLE_CONTRIBUTOR') %}
   <div class="col-sm-6 col-md-3">
      <a href="{{ path('eureka_g6k_admin_datasources') }}" class="thumbnail">
         <img src="{{ asset('assets/admin/images/database1.png') }}" alt="{{ 'Data sources'|trans }}">
      <div class="caption">
         <h3>{{ datasourcesCount }} {{ 'Data sources'|trans }}</h3>
         <p>{{ 'Data sources management'|trans }}</p>
      </div>
      </a>
   </div>
   {% endif %}
	{% if is_granted('ROLE_ADMIN') %}
   <div class="col-sm-6 col-md-3">
      <a href="{{ path('eureka_g6k_admin_views') }}" class="thumbnail">
         <img src="{{ asset('assets/admin/images/view.png') }}" alt="{{ 'Views'|trans }}">
      <div class="caption">
         <h3>{{ viewsCount }} {{ 'Views'|trans }}</h3>
         <p>{{ 'Views management'|trans }}</p>
      </div>
      </a>
   </div>
   {% endif %}
	{% if is_granted('ROLE_MANAGER') %}
   <div class="col-sm-6 col-md-3">
      <a href="{{ path('eureka_g6k_admin_simulators') }}" class="thumbnail">
         <img src="{{ asset('assets/admin/images/gear.png') }}" alt="{{ 'Simulators'|trans }}">
       <div class="caption">
         <h3>{{ simulatorsCount }} {{ 'Simulators'|trans }}</h3>
         <p>{{ 'Simulators definition'|trans }}</p>
      </div>
     </a>
	</div>
	{% endif %}
	{% if is_granted('ROLE_SUPER_ADMIN') %}
   <div class="col-sm-6 col-md-3">
      <a href="{{ path('eureka_g6k_admin_users') }}" class="thumbnail">
         <img src="{{ asset('assets/admin/images/user.png') }}" alt="{{ 'Users'|trans }}">
      <div class="caption">
         <h3>{{ usersCount }} {{ 'Users'|trans }}</h3>
         <p>{{ 'Users management'|trans }}</p>
      </div>
      </a>
   </div>
   {% endif %}
   <div class="col-sm-6 col-md-3">
      <a href="{{ path('eureka_g6k_admin_documentation', { 'document' : 'index' }) }}" class="thumbnail">
         <img src="{{ asset('assets/admin/images/help.png') }}" alt="{{ 'Help'|trans }}">
      <div class="caption">
         <h3>{{ 'Help'|trans }}</h3>
         <p>{{ 'Tutorials'|trans }}</p>
      </div>
      </a>
   </div>
</div>
{% endblock %}

{% extends 'EUREKAG6KBundle:base/layout:pagelayout.html.twig' %}

{% block title %}{{ 'G6K Admin'|trans }}{% endblock %}

{% block metas %}
{{ parent() }}<meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block bodyclass %}{% endblock %}

{% block styles %}
{% include 'EUREKAG6KBundle:admin/sections:styles.html.twig' %}
{% endblock %}

{% block body %}
	<div id="wrapper">
		{% include 'EUREKAG6KBundle:admin/sections:header.html.twig' %}
		<div id="page" class="container-fluid">
		{% block content %}{% endblock %}
		</div>
		{% include 'EUREKAG6KBundle:admin/sections:footer.html.twig' %}
	</div>
{% block scripts %}
{% if simulator is not empty %}
<script type="text/javascript">
var dataset = {{ dataset|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE') b-or constant('JSON_UNESCAPED_SLASHES'))|raw }}
var steps = {{ steps|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE') b-or constant('JSON_UNESCAPED_SLASHES'))|raw }}
var actions = {{ actions|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE') b-or constant('JSON_UNESCAPED_SLASHES'))|raw }}
var rules = {{ rules|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE') b-or constant('JSON_UNESCAPED_SLASHES'))|raw }}
var views = {{ views|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE') b-or constant('JSON_UNESCAPED_SLASHES'))|raw }}
var datasources = {{ datasources|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE') b-or constant('JSON_UNESCAPED_SLASHES'))|raw }}
</script>
{% endif %}				
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/jquery-1.11.1.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/jquery-migrate-1.2.1.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/translations/config.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/translations/messages/' ~ app.request.locale ~ '.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/g6k.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/admin/js/g6k.admin.js') }}"></script>
<script type="text/javascript">
Admin.lang = '{{ app.request.locale }}';
Admin.locale = '{{ app.request.locale }}-{{ app.request.locale|upper }}';
</script>
{% include 'EUREKAG6KBundle:admin/sections:scripts.html.twig' %}
  {% endblock %}
{% endblock %}

